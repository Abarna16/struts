       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
 
<tiles-definitions>

<definition name="baseLayout" path="/baseLayout.jsp">
<put name="header" value="/header.jsp"/>
<put name="menu" value="/menu.jsp"/>
<put name="body" value="/body.jsp"/>
<put name="footer" value="/footer.jsp"/>
</definition>
<definition name="signup" extends="baseLayout">

<put name="body" value="/signup.jsp"/>
</definition>

<definition name="login" extends="baseLayout">

<put name="body" value="/login.jsp"/>
</definition>

<definition name="success" extends="baseLayout">
<put name="body" value="/success.jsp"/>
</definition>

<definition name="failure" extends="baseLayout">
<put name="body" value="/failure.jsp"/>
</definition>

<definition name="welcome" extends="baseLayout">
<put name="body" value="/welcome.jsp"/>
</definition>

<definition name="logout" extends="baseLayout">
<put name="body" value="/logout.jsp"/>
</definition>

<definition name="profile" extends="baseLayout">
<put name="body" value="/profile.jsp"/>
</definition>



</tiles-definitions> 



 

